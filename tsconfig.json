{
  "compilerOptions": {
    "target": "es2015", // або "es6"
    "module": "commonjs",
    "lib": [
      "es2015", // Додаємо підтримку Promise, startsWith тощо
      "dom", // Якщо потрібен DOM (наприклад, для fetch)
      "esnext" // Для найновіших фіч (опціонально)
    ],
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}